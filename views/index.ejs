<%- include('partials/head') %>

<body>

    <%- include('partials/header') %>

    <div class="container">
        <div class="table-buttons">
            <button type="button" class="table-button" onclick="showTable('students')">Students</button>
            <button type="button" class="table-button" onclick="showTable('courses')">Courses</button>
            <button type="button" class="table-button" onclick="showTable('student_courses')">Student Courses</button>
        </div>

        <form id="tableForm" action="/" method="POST" style="display: none;">
            <input type="hidden" name="table_name" id="table_name">
        </form>

        <%- include('partials/dataTable') %>
    </div>

    <form action="/addStudent" method="POST">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" required><br>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" required><br>
        <label for="town">Town:</label>
        <input type="text" id="town" name="town" required><br>
        <button type="submit">Add Student</button>
    </form>

    <%- include('partials/footer') %>

    <script>
        function showTable(tableName) {
            document.getElementById('table_name').value = tableName;
            document.getElementById('tableForm').submit();
        }
    </script>
</body>
</html>
